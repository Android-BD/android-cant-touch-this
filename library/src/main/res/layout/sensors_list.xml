<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@android:color/black"
    android:orientation="vertical">

    <com.relayr.cannottouchthis.widget.CustomTextView
        android:text="@string/select_accel"
        app:font="MavenPro-Black.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:textSize="24sp"
        android:textColor="@android:color/white"/>

    <com.relayr.cannottouchthis.widget.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensor 1"
        app:font="MavenPro-Black.ttf"
        android:background="@color/gray_background"
        android:textColor="@color/gray_even_lighter_text"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:padding="20dp"
        android:onClick="onSensorClicked"
        android:enabled="true"
        android:clickable="true"/>


    <com.relayr.cannottouchthis.widget.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensor 2"
        app:font="MavenPro-Black.ttf"
        android:background="@color/gray_background"
        android:textColor="@color/gray_even_lighter_text"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:padding="20dp"
        android:onClick="onSensorClicked"
        android:enabled="true"
        android:clickable="true"/>
</LinearLayout>
